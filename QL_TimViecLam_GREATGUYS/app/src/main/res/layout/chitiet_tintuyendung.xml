<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chi tiết tin tuyển dụng"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrback_chitietTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_chitiet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nv_ban_hang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons1" />

    <TextView
        android:id="@+id/tv_tenTinTD_chitiet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ten tin tuyen dung"
        android:textColor="#1EEA22"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/img_chitiet"
        app:layout_constraintTop_toTopOf="@+id/img_chitiet" />

    <TextView
        android:id="@+id/tv_tenNguoidang_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Ten nguoi dang"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/img_chitiet"
        app:layout_constraintTop_toBottomOf="@+id/tv_tenTinTD_chitiet" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Hạn nộp hồ sơ:"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/img_chitiet"
        app:layout_constraintTop_toBottomOf="@+id/tv_tenNguoidang_chitiet" />

    <TextView
        android:id="@+id/tv_hannop_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="ngay het han"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/img_chitiet"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <LinearLayout
        android:id="@+id/ln_nopCV_chitiet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:backgroundTint="#06AA2A"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ln_luutin_chitiet"
        app:layout_constraintTop_toBottomOf="@+id/tv_hannop_chitiet">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_send_24" />

        <TextView
            android:id="@+id/tv_ln_nopCV_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nộp CV"
            android:textColor="@color/white"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_luutin_chitiet"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@+id/ln_nopCV_chitiet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hannop_chitiet">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_save_alt_24"/>

        <TextView
            android:id="@+id/tv_ln_luutin_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Lưu tin"
            android:textColor="@color/white"
            android:textSize="23dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Thông tin chung"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ln_luutin_chitiet" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="Mức lương"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv_mucluong_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mức lương"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:text="Số lượng tuyển"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv_soluongtuyen_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mức lương"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hình thức làm việc"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv_mucluong_chitiet" />

    <TextView
        android:id="@+id/tv_htlv_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="htlv"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/tv5" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cấp bậc"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv_soluongtuyen_chitiet" />

    <TextView
        android:id="@+id/tv_capbac_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cap bac"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv6"
        app:layout_constraintTop_toBottomOf="@+id/tv6" />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Giới tính"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/tv_htlv_chitiet" />

    <TextView
        android:id="@+id/tv_GT_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GT"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/tv7"
        app:layout_constraintTop_toBottomOf="@+id/tv7" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kinh nghiệm"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/tv6"
        app:layout_constraintTop_toBottomOf="@+id/tv_capbac_chitiet" />

    <TextView
        android:id="@+id/tv_kinhnghiem_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cap bac"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv8"
        app:layout_constraintTop_toBottomOf="@+id/tv8" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_GT_chitiet"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Địa điểm làm việc"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_diadiem_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DD"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv9"
        app:layout_constraintTop_toBottomOf="@+id/tv9" />

</androidx.constraintlayout.widget.ConstraintLayout>