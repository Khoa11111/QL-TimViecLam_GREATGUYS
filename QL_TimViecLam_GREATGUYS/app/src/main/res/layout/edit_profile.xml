<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chỉnh sửa hồ sơ"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/arrback_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_arrow_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_black_baseline_person_24"
            android:layout_margin="10dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/edt_accName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_black_baseline_person_24"
            android:drawablePadding="5dp"
            android:hint="Họ và tên"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp"/>


        <TextView
            android:id="@+id/edt_accDoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_birthday_24"
            android:drawablePadding="5dp"
            android:textSize="18sp"
            android:hint="Ngày sinh"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edt_accPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:drawablePadding="5dp"
            android:hint="Điện thoạt"
            android:inputType="number"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/edt_accEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edt_accAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:drawablePadding="5dp"
            android:hint="Địa chỉ"
            android:inputType="textPersonName|textCapWords"
            android:padding="10dp"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_udp_userInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:textStyle="bold"
        android:text="Cập nhật"/>
</LinearLayout>